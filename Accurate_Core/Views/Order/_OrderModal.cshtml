<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog  modal-dialog">
        <div class="modal-content">
           
                <div class="modal-header" style="background-color:#03396c; color: white;">
                    <h5 class="modal-title" id="exampleModalLabel"></h5>
                    <span type="button" data-bs-dismiss="modal" aria-label="Close"><i class="fa-solid fa-xmark"></i></span>
                </div>
                <div class="modal-body">             
                <form id="myDropzone" action="/Order/Index" class="dropzone" method="post" enctype="multipart/form-data">
                    <div class="fallback">
                        <input name="file" type="file" accept=".xls, .xlsx"/>
                    </div>
                  
                </form>

                    <div class="alert alert-danger mt-2" role="alert">
                        @TempData["ErrorMessage"]
                    </div>
